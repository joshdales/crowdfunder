<% unless current_user %>
  <p>Please log in to leave a comment</p>
<% end %>

<% if @project.project_comments.any? %>
  <ul>
    <% @project.project_comments.each do |project_comment| %>
      <% if project_comment.persisted? %>
        <li>
          <p class="commenter"><%= project_comment.user.first_name %> said:</p>
          <p class="comment"><%= project_comment.comment %></p>
          <small class="comment-date">Created at <%= dateformat(project_comment.created_at) %></small>
          <% if current_user == project_comment.user %>
            <%= link_to("Delete", project_project_comment_path(@project, project_comment), method: :delete, data: { confirm: "Are you sure you want to delete your comment?"}) %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>No comments have been left yet.</p>
<% end %>
