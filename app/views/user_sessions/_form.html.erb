<%= form_tag user_sessions_path, :method => :post do %>

  <p class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p class="actions">
    <%= submit_tag "Login" %>
  </p>
<% end %>
