<%= form_for(@project, html: {multipart: true}) do |f| %>
  <% if @project.errors.any? %>
    <ul>
      <% @project.errors.full_messages.each do |m| %>
      <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <p class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </p>

  <p class="field">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </p>

  <p class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </p>

  <p class="field">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </p>

  <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>
  <br>
  <%= f.submit %>
<% end %>
