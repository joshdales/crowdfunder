<h1>Add a reward for <%= @project.title %></h1>
  <% if @project.errors.any? %>
    <ul>
      <% @project.errors.full_messages.each do |m| %>
      <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>
<%= form_for [@project, @reward] do |f| %>
  <p>
    <%= f.label :dollar_amount %>
    <%= f.number_field :dollar_amount, step: 0.01 %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :limit %> (Optional)
    <%= f.number_field :limit %>
  </p>

  <%= f.submit %>
<% end %>
